<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    tools:context=".fragment.CouncilFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomActionBar"
                app:elevation="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                android:textColorSecondary="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="COUNCIL"
                    android:lineHeight="44sp"
                    android:letterSpacing="0.40"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@android:color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"/>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:paddingHorizontal="25dp"
            android:elevation="0dp"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgChair"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/blug_council"
                        android:layout_gravity="start"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chairperson"
                        android:layout_alignParentBottom="true"
                        android:textColor="@android:color/white"
                        android:layout_gravity="bottom"
                        android:textSize="18sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_medium" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignStart="@+id/imgChair"
                        android:src="@drawable/ring"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="end">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgViceChair"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/blug_council" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vice\nChairperson"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:textColor="@android:color/white"
                        android:layout_gravity="bottom"
                        android:textSize="18sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_medium" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignEnd="@id/imgViceChair"
                        android:src="@drawable/ring"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="start">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgSecretary"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/blug_council" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secretary"
                        android:layout_alignParentBottom="true"
                        android:textColor="@android:color/white"
                        android:layout_gravity="bottom"
                        android:textSize="18sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/montserrat_medium" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignStart="@id/imgSecretary"
                        android:src="@drawable/ring"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="end">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgTreasurer"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/blug_council" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Treasurer"
                        android:layout_alignParentBottom="true"
                        android:textColor="@android:color/white"
                        android:layout_gravity="bottom"
                        android:textSize="18sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/montserrat_medium" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignEnd="@id/imgTreasurer"
                        android:src="@drawable/ring"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="start">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgMemberChair"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/blug_council" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Membership\nChairperson"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:textColor="@android:color/white"
                        android:layout_gravity="bottom"
                        android:textSize="18sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_medium" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignStart="@id/imgMemberChair"
                        android:src="@drawable/ring"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="end">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgWebmaster"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/blug_council" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Webmaster"
                        android:layout_alignParentBottom="true"
                        android:textColor="@android:color/white"
                        android:layout_gravity="bottom"
                        android:textSize="18sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/montserrat_medium" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignEnd="@id/imgWebmaster"
                        android:src="@drawable/ring"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>